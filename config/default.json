{
  "core": {
    "baseUrl": "http://localhost:3000",
    "endpoints": {
      "data": "/api/data",
      "pair": "/api/pair",
      "health": "/api/health"
    }
  },
  "ml": {
    "features": {
      "indicators": ["rsi", "macd", "bollinger", "ma", "volume", "stochastic", "williamsR", "ichimoku", "adx", "cci", "parabolicSAR"],
      "lookbackPeriods": [5, 10, 20],
      "targetPeriods": [1, 3, 5]
    },
    "models": {
      "lstm": {
        "sequenceLength": 60,
        "units": 50,
        "epochs": 100,
        "batchSize": 32,
        "validationSplit": 0.2
      }
    }
  },
  "server": {
    "port": 3001
  },
  "trading": {
    "pairs": ["XMR","RVN"]
  }
}